            <span class="highlight"></span>
            <span class="bar"></span>
            <label>商品詳細</label>
          </div>
        </div>
        <div class="row card-body product_card">
          <div class="col-6">
            <p>
              <img src="#" alt="" class="img-print" id="print_img" style="width:100%; display: none;">
            </p>
            <div class="file-wrap">
              <input type="file" name="image_file" id="file-image" class="file">
            </div>
          </div>
          <div class="col-6">
            <p>
              <img src="#" alt="" class="img-print" id="print_img_2" style="width:100%; display: none;">
            </p>
            <div class="file-wrap">
              <input type="file" name="image_file_2" id="file-image_2" class="file">
            </div>
          </div>
          <div class="col-6">
            <p>
              <img src="#" alt="" class="img-print" id="print_img_3" style="width:100%; display: none;">
            </p>
            <div class="file-wrap">
              <input type="file" name="image_file_3" id="file-image_3" class="file">
            </div>
          </div>
          <div class="col-6">
            <p>
              <img src="#" alt="" class="img-print" id="print_img_4" style="width:100%; display: none;">
            </p>
            <div class="file-wrap">
              <input type="file" name="image_file_4" id="file-image_4" class="file">
            </div>
          </div>
        </div>
        <p class="btn_wrap">
          <a href="/admin/products/" class="btn btn-secondary">戻る</a>
        </p>
        <p class="btn_wrap">
          <input class="btn btn-primary" type="button" value="登録">
        </p>
      </form>
    </div>
</div>
