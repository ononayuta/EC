<% include ../../layout/admin_header %>
<h1>商品新規登録</h1>
<div class="row">
  <div class="card col-12">
      <form>
        <div class="card-body product_card">
          <div class="group">
            <input type="text" required>
            <span class="highlight"></span>
            <span class="bar"></span>
            <label>商品カテゴリー</label>
          </div>
          <div class="group">
            <input type="text" required>
            <span class="highlight"></span>
